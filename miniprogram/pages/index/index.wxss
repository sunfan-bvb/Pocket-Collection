/**index.wxss**/

.add{
  position: fixed;
  top: 0px;
  right: 4%;
  width: 10vw;
  height: 10vw;
}

.searchback{
  position: fixed;
  display: flex;
  flex-direction: row;
  top: 2px;
  left: 4%;
  width: 80vw;
  height: 8vw;
  border-radius: 20px;
  background-color: white;
}

.input{
  width:70vw;
  padding-left: 3vw;
}

.searchimg{
  width:7vw;
  height: 7vw;
  padding-right: 2vw;
}

.listview-loader{
  background-color: #fff;
  border-top : 1px solid rgba(0,0,0,0.1);
  border-bottom: 1px solid rgba(0,0,0,0.1);
  font-size: x-small;
  margin-top: 40rpx;
}

.topcontainer{
  display : flex;
  flex-flow: row;
  width: 100%;
}

.text{
  display:flex;
  flex-direction:column;
  margin-right: 0;
}

.author{
  display: flex;
  flex-direction: row;
  align-items:center;
  margin-left: 0;
}

.author-img{
  width:10vw;
  height:10vw;
  padding-right: 3vw;
}

.info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 2vh;
  padding-top:1vh;
}

.blank{
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.blank-1{
  display: flex;
  flex-direction: row;
}

.blank-image{
  height: 20vw;
  width: 30vw;
  margin-bottom: 5vw;
}

.blank-text-1{
  color: gray;
  font-weight: bold;
}

.blank-text-2{
  color: #56AC61;
  font-weight: bold;
}

.back{
  position: fixed;
  left: 5vw;
  bottom: 5vw;
  width: 12vw;
  height: 12vw;
}

.text{
  font-size: small;
}