/* pages/follow/follow.wxss */
.followback{
  background-color: white;
  height: 8vh;
  border-top : 1px solid rgba(0,0,0,0.1);
  border-bottom: 1px solid rgba(0,0,0,0.1);
  display: flex;
  flex-direction: row;
  padding-top: 3vw;
  padding-bottom: 3vw;
  align-items: center;
}
.image{
  height: 8vh;
  width: 8vh;
  margin-left: 5vw;
}
.text{
  margin-left: 5vw;
  height: min-content;
}
.blank{
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
.blank-image{
  height: 15vw;
  width: 15vw;
}
.blank-text{
  margin-left: 3vw;
  color: gray;
  font-weight: bold;
}