/* pages/album/album.wxss */
.listview-loader{
  background-color: #fff;
  border-top : 1px solid rgba(0,0,0,0.1);
  border-bottom: 1px solid rgba(0,0,0,0.1);
  font-size: x-small;
  margin-top: 40rpx;
}

.topcontainer{
  display : flex;
  flex-flow: row;
  width: 100%;
}

.text{
  display:flex;
  flex-direction:column;
  margin-right: 0;
}

.author{
  display: flex;
  flex-direction: row;
  align-items:center;
  margin-left: 0;
}

.author-img{
  width:10vw;
  height:10vw;
  padding-right: 3vw;
}

.info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 2vh;
  padding-top:1vh;
}

.text-inner{
  font-size: small;
}

.icon-back-1{
  margin-left: 21vw;
  margin-top: 1vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.icon-back-2{
  margin-left: 40vw;
  margin-top: 1vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.icon{
  width: 20px;
  height: 22px;
  margin-bottom: 0.5vh;
}

.icon-text-2{
  font-size: small;
  color: #5AB36B;
}

.icon-text-1{
  font-size: small;
  color: #D93A2F;
}

.bottom-back{
  position: fixed;
  bottom: 0px;
  width:100vw;
  background-color: white;
  border-top: 0.5px solid gray;
  height: 10vh;
  display: flex;
  flex-direction: row;
  justify-items: center;
}