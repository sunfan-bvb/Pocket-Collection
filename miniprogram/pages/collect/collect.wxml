<!--pages/collect/collect.wxml-->
<view wx:if="{{works.length==0}}" class="blank">
  <image src="/images/blank.png" class="blank-image"/>
  <text class="blank-text">空空如也！</text>
</view>
<view class="listview-loader" wx:for="{{works}}" data-index="{{index}}">
  <view wx:if="{{item.authorname}}">
  <image src='{{item.cover}}' mode="aspectFill" style="width:100%;height:35vh;" bindtap="todetail" data-item="{{item}}"/>
  <view class="info">
  <view class="author">
  <image class='author-img' src='{{item.authorimg}}' bindtap="tohomepage"/>
    <text>{{item.authorname}}</text>
  </view>
  <view class="text">
  <text>{{item.title}}</text>
  <text>{{item.date}}</text>
  </view>
  </view>
  </view>
  <view wx:if="{{!item.authorname}}" style="height:10vh;">
    <text class="sorry">很抱歉，本条记录已被作者删除</text>
    <view class="delete" bindtap="delete" data-index="{{index}}">删除</view>
  </view>
</view>