/* pages/collect/collect.wxss */
.listview-loader{
  background-color: #fff;
  border-top : 1px solid rgba(0,0,0,0.1);
  border-bottom: 1px solid rgba(0,0,0,0.1);
  font-size: x-small;
  margin-top: 40rpx;
}

.topcontainer{
  display : flex;
  flex-flow: row;
  width: 100%;
}

.text{
  display:flex;
  flex-direction:column;
  margin-right: 0;
}

.author{
  display: flex;
  flex-direction: row;
  align-items:center;
  margin-left: 0;
}

.author-img{
  width:10vw;
  height:10vw;
  padding-right: 3vw;
}

.info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 2vh;
  padding-top:1vh;
}
.delete{
  color: red;
  font-size: smaller;
  padding-left: 80vw;
}
.sorry{
  font-weight: bold;
  padding-left: 5vw;
  padding-top: 4vh;
}
.blank{
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
.blank-image{
  height: 15vw;
  width: 15vw;
}
.blank-text{
  margin-left: 3vw;
  color: gray;
  font-weight: bold;
}